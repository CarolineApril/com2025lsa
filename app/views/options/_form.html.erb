<%= form_for(@option) do |f| %>
  <% if @option.errors.any? %> <!-- if there are any errors then display error message -->
    <div id="error_explanation">
      <h2><%= pluralize(@option.errors.count, "error") %> prohibited this option from being saved:</h2> <!-- don't allow module with errors to be saved -->

      <ul>
      <% @option.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field"> <!-- creating a form to allow user to create new module option -->
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :professor %><br>
    <%= f.text_field :professor %>
  </div>
  <div class="field">
    <%= f.label :credits %><br>
    <%= f.text_area :credits %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
