<h2>Listing Options</h2>

<table> <!-- creating a table to display the module information -->
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Professor</th>
      <th>Credits</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody> <!-- .each method rolls through options to display information for each field, attempt to hide fields using jquery commands -->
    <% @options.each do |option| %>
      <tr>
        <td><%= option.title %><%= link_to "Hide", "", class: 'hide', data: {'js-hide-link' => true} %></td>
        <td><%= option.content %><%= link_to "Hide", "", class: 'hide', data: {'js-hide-link' => true} %></td>
        <td><%= option.professor %><%= link_to "Hide", "", class: 'hide', data: {'js-hide-link' => true} %></td>
        <td><%= option.credits %><%= link_to "Hide", "", class: 'hide', data: {'js-hide-link' => true} %></td>
        <td><%= link_to 'Show', option %><%= link_to "Hide", "", class: 'hide', data: {'js-hide-link' => true} %></td>
        <td><%= link_to 'Edit', edit_option_path(option) %><%= link_to "Hide", "", class: 'hide', data: {'js-hide-link' => true} %></td>
        <td><%= link_to 'Destroy', option, method: :delete, data: { confirm: 'Are you sure?' } %><%= link_to "Hide", "", class: 'hide', data: {'js-hide-link' => true} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

